<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cc_splashbw"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".WelcomeActivity"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to Comic Collaboration"
        android:id="@+id/welcomeText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:paddingBottom="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please enter a user name and password"
        android:id="@+id/welcomeInstructText"
        android:layout_below="@+id/welcomeText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:paddingBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username"
        android:id="@+id/welcomeUsernameText"
        android:paddingBottom="8dp"
        android:layout_below="@+id/welcomeInstructText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/welcomeUserNameEditText"
        android:paddingBottom="8dp"
        android:backgroundTint="#85ffffff"
        android:hint="enter your user name"
        android:layout_alignBottom="@+id/welcomeUsernameText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password"
        android:id="@+id/welcomePasswordText"
        android:layout_below="@+id/welcomeUsernameText"
        android:layout_alignLeft="@+id/welcomeUsernameText"
        android:layout_alignStart="@+id/welcomeUsernameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/welcomePasswordEditText"
        android:layout_below="@+id/welcomeUsernameText"
        android:layout_alignLeft="@+id/welcomeUserNameEditText"
        android:layout_alignStart="@+id/welcomeUserNameEditText"
        android:text="Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/welcomeSubmitInfoButton"
        android:hint="you must agree to the terms and conditions of this app before signing in"
        android:enabled="true"
        android:layout_below="@+id/welcomePasswordEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/welcomePasswordText"
        android:layout_alignStart="@+id/welcomePasswordText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to Play"
        android:id="@+id/buttonHelpWelcome"
        android:layout_alignBottom="@+id/welcomePasswordText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register to Create a User Login"
        android:id="@+id/gotoRegistrationButton"
        android:layout_below="@+id/welcomeSubmitInfoButton"
        android:layout_alignLeft="@+id/welcomeInstructText"
        android:layout_alignStart="@+id/welcomeInstructText"
        android:layout_marginTop="33dp" />


</RelativeLayout>